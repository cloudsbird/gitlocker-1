<%= render "layouts/logged_in_header" %>

<div class="bg-white py-24 md:py-32 lg:py-40">
  <div class="mx-auto grid max-w-7xl grid-cols-1 gap-x-8 gap-y-20 px-6 lg:px-8 xl:grid-cols-2">
    <ul role="list" class="mx-auto grid max-w-2xl grid-cols-1 gap-x-6 gap-y-20 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:gap-x-8 xl:col-span-2">
      <li>
        <%= button_to complete_registration_path(user_type: "customer"), method: :put, data: { turbo: false } do %>
          <%= image_tag "buy.png", class: "rounded-2xl object-cover" %>
          <h3 class="mt-6 text-lg font-semibold leading-8 text-gray-900">Buy Source Code</h3>
          <p class="mt-4 text-base leading-7 text-gray-600">
            You're someone who wants to buy code repositories. You'll be directed immediately to the dashboard if you pick this option.
          </p>
        <% end %>
      </li>

      <li>
        <!-- <img class="aspect-[3/2] w-full rounded-2xl object-cover" src="https://images.unsplash.com/photo-1505840717430-882ce147ef2d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=8&w=1024&h=1024&q=80" alt=""> -->
        <%= button_to complete_registration_path(user_type: "developer"), method: :put, data: { turbo: false } do %>
          <%= image_tag "sell.png", class: "rounded-2xl object-cover" %>
          <h3 class="mt-6 text-lg font-semibold leading-8 text-gray-900">Sell Source Code</h3>
          <p class="mt-4 text-base leading-7 text-gray-600">
            You're a developer who has written some awesome code, and you would like to sell it.
          </p>
        <% end %>
      </li>
    </ul>
  </div>
</div>
