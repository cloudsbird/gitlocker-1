<div class="bg-gray-900">
  <div class="mx-auto flex h-10 max-w-7xl items-center justify-end px-4 sm:px-6 lg:px-8">
    <div class="flex items-center space-x-6">
      <% if user_signed_in? %>
        <%= link_to "FAQ", faq_path, class: "text-sm font-medium text-white hover:text-gray-100" %>
        <%= link_to "Code Marketplace", marketplace_root_path(clicked: true), class: "text-sm font-medium text-white hover:text-gray-100" %>
        <%= link_to "Profile", edit_user_path(current_user), class: "text-sm font-medium text-white hover:text-gray-100" %>
        <%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "text-sm font-medium text-white hover:text-gray-100" %>
      <% else %>
        <%= link_to "FAQ", faq_path, class: "text-sm font-medium text-white hover:text-gray-100" %>
        <%= link_to "Code Marketplace", marketplace_root_path(clicked: true), class: "text-sm font-medium text-white hover:text-gray-100" %>
        <%= link_to "Sign in", new_user_session_path, data: { turbo: false }, class: "text-sm font-medium text-white hover:text-gray-100" %>
        <%= link_to "Create an account", new_user_registration_path, data: { turbo: false }, class: "text-sm font-medium text-white hover:text-gray-100" %>
      <% end %>
    </div>
  </div>
</div>
<div class="relative bg-gray-900">
<header class="bg-white bg-opacity-10 backdrop-blur-md inset-x-0 top-0 z-50 flex h-16 border-b border-gray-900/10">
  <div class="mx-auto flex w-full max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
    <div class="flex flex-1 items-center gap-x-6">
      <button type="button" class="-m-3 p-3 md:hidden">
        <span class="sr-only">Open main menu</span>
        <svg class="h-5 w-5 text-gray-900" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path fill-rule="evenodd" d="M2 4.75A.75.75 0 012.75 4h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 4.75zM2 10a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75A.75.75 0 012 10zm0 5.25a.75.75 0 01.75-.75h14.5a.75.75 0 010 1.5H2.75a.75.75 0 01-.75-.75z" clip-rule="evenodd" />
        </svg>
      </button>
      <%= link_to explore_path, class: "hidden lg:flex lg:flex-1 lg:items-center" do %>
        <div class="flex items-center">
          <div>
            <%= image_tag "logo-transparent.png", class: "h-8 w-auto", alt: "" %>
          </div>
          <div>
            <%= image_tag "logo-text.png", class: "h-4 w-auto ml-2", alt: "" %>
          </div>
        </div>
      <% end %>
    </div>
    <nav class="hidden md:flex md:gap-x-11 md:text-sm md:font-semibold md:leading-6 md:text-gray-700">
      <% if current_user %>
        <%= link_to "Explore", explore_path, class: "flex items-center text-sm font-medium text-white" %>
        <%= link_to "Add Product", new_product_path, class: "flex items-center text-sm font-medium text-white" %>
        <%= link_to "My Products", products_path, class: "flex items-center text-sm font-medium text-white" %>
        <%= link_to "Get Paid", funds_path, class: "flex items-center text-sm font-medium text-white" %>
      <% end %>
    </nav>
    <div class="flex flex-1 items-center justify-end gap-x-8">
      <div class="flex flex-1 items-center lg:hidden">
            <!-- Mobile menu toggle, controls the 'mobileMenuOpen' state. -->
            <button
            data-action="click->home-nav#open"
            type="button"
            class="-ml-2 p-2 text-white"
            >
            <span class="sr-only">Open menu</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
          </button>

          <!-- Search -->
          <a
          data-controller="search-link"
          data-action="click->search-link#openDialog"
          data-search-dialog-id="search-dialog"
          class="ml-2 p-2 text-white cursor-pointer search-link"
          >
          <span class="sr-only">Search</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
          </svg>
        </a>
      </div>

      <div class="flex flex-1 items-center justify-end">
        <a
          data-controller="search-link"
          data-action="click->search-link#openDialog"
          data-search-dialog-id="search-dialog"
          class="hidden text-sm font-medium text-white lg:block cursor-pointer search-link">
          Search
        </a>

        <!-- Cart -->
        <div class="ml-4 flow-root lg:ml-8">
          <%= link_to marketplace_cart_items_path, class: "group -m-2 flex items-center p-2" do %>
          <svg class="h-6 w-6 flex-shrink-0 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
          </svg>
          <span class="ml-2 text-sm font-medium text-white"><%= current_user&.cart_items_count || visitor_user.cart_items.size %></span>
          <span class="sr-only">items in cart, view bag</span>
          <% end %>
        </div>
      </div>
      
      <button type="button" class="-m-2.5 p-2.5 text-gray-400 hover:text-gray-500">
        <span class="sr-only">View notifications</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
        </svg>
      </button>
      <%= link_to edit_user_path(current_user), class: "-m-1.5 p-1.5" do %>
        <span class="sr-only">Your profile</span>
        <% if current_user.profile_picture.attached? %>
          <%= image_tag current_user.profile_picture, class: "h-8 w-8 rounded-full bg-gray-800" %>
        <% else %>
          <%= image_tag "profile_placeholder.png", class: "h-8 w-8 rounded-full bg-gray-800" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <!-- Mobile menu, show/hide based on menu open state. -->
  <div class="hidden" role="dialog" aria-modal="true">
    <!-- Background backdrop, show/hide based on slide-over state. -->
    <div class="fixed inset-0 z-50"></div>
    <div class="fixed inset-y-0 left-0 z-50 w-full overflow-y-auto bg-white px-4 pb-6 sm:max-w-sm sm:px-6 sm:ring-1 sm:ring-gray-900/10">
      <div class="-ml-0.5 flex h-16 items-center gap-x-6">
        <button type="button" class="-m-2.5 p-2.5 text-gray-700">
          <span class="sr-only">Close menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
        <div class="-ml-0.5">
          <a href="#" class="-m-1.5 block p-1.5">
            <span class="sr-only">Your Company</span>
            <img class="h-8 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="">
          </a>
        </div>
      </div>
      <div class="mt-2 space-y-2">
        <% if current_user&.registration_completed? %>
          <%= link_to "Products", products_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
        <% end %>
        <%= link_to "Log out", destroy_user_session_path, data: { "turbo-method": :delete }, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50" %>
      </div>
    </div>
  </div>
</header>
</div>
