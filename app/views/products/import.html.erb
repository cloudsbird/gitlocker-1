<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4">Import Products</h1>
  <% if @user_repos.present? %>
    <table class="min-w-full bg-gray-800 text-white border border-gray-700">
      <thead>
        <tr>
          <th class="py-2 px-4 border-b border-gray-700">Repository Name</th>
          <th class="py-2 px-4 border-b border-gray-700">Repository URL</th>
          <th class="py-2 px-4 border-b border-gray-700">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @user_repos.each do |repo| %>
          <tr>
            <td class="py-2 px-4 border-b border-gray-700">
              <a href="<%= repo[:url] %>" class="text-blue-500 hover:underline" target="_blank">
                <%= repo[:name] %>
              </a>
            </td>
            <td class="py-2 px-4 border-b border-gray-700">
              <a href="<%= repo[:url] %>" class="text-blue-500 hover:underline" target="_blank">
                <%= repo[:url] %>
              </a>
            </td>
            <td class="py-2 px-4 border-b border-gray-700">
              <%= form_with url: products_path, method: :post, local: true do |form| %>
                <%= form.hidden_field :name, value: repo[:name] %>
                <%= form.hidden_field :url, value: repo[:url] %>
                <%= form.submit 'Import', class: 'bg-blue-500 text-white px-4 py-2 rounded-md' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No repositories found or unable to fetch repositories.</p>
  <% end %>
</div>
