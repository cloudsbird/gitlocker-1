<%=
  render BreadcrumbComponent.new([
    { text: "Products", url: products_path },
    { text: "New Product", url: new_product_path }
  ])
%>
<div class="mx-auto px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
  <button id="upload-link" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Upload Private Repository From Computer</button>
  <button id="repo-link" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Upload Private Repository From GitHub</button>

  <div id="upload-form-container" class="hidden">
    <%= render partial: 'new_form' %>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    const uploadFormContainer = $('#upload-form-container');
    const urlField = $('#url-field');
    const folderField = $('#upload-folder-field');

    const uploadLink = $('#upload-link');
    const repoLink = $('#repo-link');

    uploadLink.on('click', function() {
      uploadFormContainer.removeClass('hidden');
      urlField.addClass('hidden');
      folderField.removeClass('hidden');
    });

    repoLink.on('click', function() {
      uploadFormContainer.removeClass('hidden');
      urlField.removeClass('hidden');
      folderField.addClass('hidden');
    });
  });
</script>