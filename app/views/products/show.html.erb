            <% if @reviews.exists? %>
              <% if policy(@product).reviewable? %>
                <div class="mt-6">
                  <%= link_to new_library_review_path(@product), class: "inline-flex items-center gap-x-2 rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
