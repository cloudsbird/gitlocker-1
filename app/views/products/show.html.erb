<div class="bg-white">
  <%=
    render BreadcrumbComponent.new([
      { text: "Products", url: products_path },
      { text: @product.name, url: product_path(@product) }
    ])
  %>

  <div class="mx-auto px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8">
    <!-- Product -->
    <div class="lg:grid lg:grid-cols-7 lg:grid-rows-1 lg:gap-x-8 lg:gap-y-10 xl:gap-x-16">
      <!-- Product image -->
      <div class="lg:col-span-4 lg:row-end-1">
        <div class="overflow-hidden rounded-lg bg-gray-100">
          <% if @product.covers.exists? %>
            <%= render CarouselComponent.new(@product.covers) %>
          <% else %>
            <%= image_tag "default-cover.png", class: "object-cover object-center relative w-full" %>
          <% end %>
        </div>
      </div>

      <!-- Product details -->
      <div class="mx-auto mt-14 max-w-2xl sm:mt-16 lg:col-span-3 lg:row-span-2 lg:row-end-2 lg:mt-0 lg:max-w-screen-lg">
        <div class="flex flex-col-reverse">
          <div class="mt-4">
            <h1 class="text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl"><%= @product.name %></h1>

            <h2 id="information-heading" class="sr-only">Product information</h2>
            <p class="mt-2 text-sm text-gray-500">Updated <time datetime="<%= @product.updated_at.strftime("%Y-%m-%d") %>"><%= @product.updated_at.strftime("%B %-m, %Y") %></time></p>
          </div>

          <div>
            <h3 class="sr-only">Reviews</h3>
            <div class="flex items-center">
              <!-- Active: "text-yellow-400", Default: "text-gray-300" -->
              <% if @reviews.exists? %>
                <% @product.average_rating.to_i.times do |review| %>
                  <svg class="text-yellow-400 h-5 w-5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
                  </svg>
                <% end %>
                <% (5 - @product.average_rating.to_i).to_i.times do |review| %>
                  <svg class="text-gray-300 h-5 w-5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
                  </svg>
                <% end %>
              <% end %>
            </div>
            <p class="sr-only"><%= @product.average_rating.to_i %> out of 5 stars</p>
          </div>
        </div>
        <div class="flex justify-between items-center">
          <p class="mt-2 text-lg font-bold"><%= number_to_currency(@product.price) %></p>
        </div>

        <% if @product.description.present? %>
          <p class="mt-6 text-gray-500 max-w-screen" style="word-wrap: break-word; color: #333;"><%= raw @product.description %></p>
        <% else %>
          <p class="mt-6 text-gray-500 italic">No description</p>
        <% end %>
        <% if @languages.present? %>
          <div class="mb-8">
            <h2 class="text-xl font-semibold mb-2">Languages</h2>
            <div class="flex flex-wrap">
              <% @languages.each do |language| %>
                <span class="bg-blue-500 text-white px-2 py-1 rounded mr-2 mb-2"><%= language.name %></span>
              <% end %>
            </div>
          </div>
        <% end %>

        <% if @categories.present? %>
          <div class="mb-8">
            <h2 class="text-xl font-semibold mb-2">Categories</h2>
            <div class="flex flex-wrap">
              <% @categories.each do |category| %>
                <span class="bg-blue-500 text-white px-2 py-1 rounded mr-2 mb-2"><%= category.name %></span>
              <% end %>
            </div>
          </div>
        <% end %>


        <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-2">
          <% if policy(@product).edit? %>
            <%= link_to "Edit", edit_product_path(@product), class: "flex w-full items-center justify-center rounded-md border border-transparent bg-indigo-600 px-8 py-3 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-50" %>
          <% elsif policy(@product).purchasable? %>
            <% if @in_cart %>
              <%= link_to "Remove from Cart", cart_item_path(@cart_item), data: { "turbo-method": :delete }, class: "flex w-full items-center justify-center rounded-md border border-transparent bg-indigo-600 px-8 py-3 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-50" %>
            <% else %>
              <%= link_to "Add to Cart", cart_items_path(product_id: @product.id), data: { "turbo-method": :post }, class: "flex w-full items-center justify-center rounded-md border border-transparent bg-indigo-600 px-8 py-3 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-50" %>
            <% end %>
          <% end %>
          <button
            type="button"
            class="flex w-full items-center justify-center rounded-md border border-transparent bg-indigo-50 px-8 py-3 text-base font-medium text-indigo-700 hover:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-50 preview-button"
          >
            Preview
          </button>
        </div>
        <br/>
        <div id="video-container"></div>

