                data-product-tabs-target="button"
                data-action="click->product-tabs#toggleTab"
                class="border-indigo-600 text-indigo-600 whitespace-nowrap border-b-2 py-6 text-sm font-medium"
                aria-controls="tab-panel-reviews"
                role="tab"
                type="button"
              >Customer Reviews</button>
              <button
                id="tab-license"
                data-product-tabs-target="button"
                data-action="click->product-tabs#toggleTab"
                class="border-transparent text-gray-700 hover:border-gray-300 hover:text-gray-800 whitespace-nowrap border-b-2 py-6 text-sm font-medium"
                aria-controls="tab-panel-license"
                role="tab"
                type="button"
