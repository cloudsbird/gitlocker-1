<div class="add_product_form bg-gradient-to-r from-blue-700 to-orange-500 min-h-screen min-w-full p-8">
<%= form_for @product, url: products_path, class: "bg-gradient-to-r from-blue-700 to-orange-500", data: {turbo: false, remote: true }, html: { id: "product-form",multipart: true } do |f| %>
  <div class="space-y-12">
    <div class="border-b border-gray-900/10 pb-12">
      <h1 class="font-semibold leading-7 text-gray-900 text-3xl underline font-mono">Add a Product</h1>
      <h2 class="mt-1 text-lg leading-6 text-black font-mono">Below is your basic product information.</h2>

