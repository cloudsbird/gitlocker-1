<% @reviews.each do |review| %>
  <div class="flex space-x-4 text-sm text-gray-500">
    <div class="flex-none py-10">
    <% if review.user.profile_picture.attached? %>
      <%= link_to marketplace_creator_path(review.user) do %>
        <%= image_tag review.user.profile_picture, class: "h-10 w-10 rounded-full bg-gray-100" %>
      <% end %>
    <% else %>
      <%= link_to marketplace_creator_path(review.user) do %>
        <%= image_tag "profile_placeholder.png", class: "h-10 w-10 rounded-full bg-gray-100" %>
      <% end %>
    <% end %>
    </div>
    <div class="py-10">
     <%= link_to marketplace_creator_path(review.user) do %>
        <h3 class="font-medium text-gray-900">
          <%= review.user.name.present? ? review.user.name : review.user.username %>
        </h3>
      <% end %>
      <p><time datetime="<%= review.created_at.strftime("%Y-%m-%d") %>"><%= review.created_at.strftime("%B %d, %Y") %></time></p>

      <div class="mt-4 flex items-center">
        <!-- Active: "text-yellow-400", Default: "text-gray-300" -->
        <% review.rating.times do %>
          <svg class="text-yellow-400 h-5 w-5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
          </svg>
        <% end %>
        <% (5 - review.rating).times do %>
          <svg class="text-gray-300 h-5 w-5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>
      <p class="sr-only"><%= review.rating %> out of 5 stars</p>

      <div class="prose prose-sm mt-4 max-w-none text-gray-500">
        <p><%= review.body %></p>
      </div>
    </div>
  </div>
<% end %>
