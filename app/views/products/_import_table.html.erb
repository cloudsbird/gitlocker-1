<div class="mt-6 flex flex-col gap-[28px] items-start import-table">
  <h3 class="text-lg font-semibold leading-7 text-gray-900 text-left mb-2">Import from GitHub</h3>
  <div class="overflow-x-auto w-full">
    <div class="inline-block min-w-full align-middle">
      <div class="shadow ring-1 ring-black border-b-[4px]">
        <div class="flex justify-start gap-8 mb-4">
          <input type="text" id="search_repo_input" class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Please enter full repo name"/>
          <button type="button" class="bg-blue-500 text-white px-4 py-2 rounded-md import-repo-btn" onclick="searchImportedRepo()" >Search</button>
        </div>
        <table class="min-w-full divide-gray-300">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="md:min-w-[256px] whitespace-nowrap w-[256px] bg-gray-200 px-6 py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-700 sm:pl-6">Repository Name</th>
              <th scope="col" class="md:min-w-[256px] whitespace-nowrap w-[256px] bg-gray-200 px-6 py-3.5 text-left text-sm font-semibold text-gray-700">Repository URL</th>
              <th scope="col" class="md:min-w-[130px] whitespace-nowrap w-[130px] bg-gray-200 px-6 py-3.5 text-left text-sm font-semibold text-gray-700">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white !border-t-0" id="private_repos">
            <%= render 'import_table_data', filtered_repos: @filtered_repos %>
          </tbody>
        </table>
        <div class="mt-4">
          <%= render 'kaminari/tailwind/paginator', paginator: @filtered_repos %>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
function searchImportedRepo() {
  $.ajax({
    url: `/search_repositories/${$("#search_repo_input").val() || ''}`,
    method: "get"
  })
}
</script>