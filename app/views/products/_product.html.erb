<li class="bg-white" data-controller="product-card">
  <div class="border border-gray-200 p-4 sm:p-6">
    <div class="relative ml-auto">
      <button type="button"
              data-action="product-card#open"
              class="-m-2.5 block p-2.5 text-gray-400 hover:text-gray-500"
              id="options-menu-0-button"
              aria-expanded="false"
              aria-haspopup="true">
        <span class="sr-only">Open options</span>
        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
          <path d="M3 10a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM8.5 10a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM15.5 8.5a1.5 1.5 0 100 3 1.5 1.5 0 000-3z" />
        </svg>
      </button>

      <div data-product-card-target="menu"
           class="hidden absolute right-0 z-10 mt-0.5 w-32 origin-top-right rounded-md bg-white py-2 shadow-lg ring-1 ring-gray-900/5 focus:outline-none"
           role="menu"
           aria-orientation="vertical"
           aria-labelledby="options-menu-0-button"
           tabindex="-1">
        <%= link_to product_path(product), data: { "product-card-target": "menuItem" }, class: "block px-3 py-1 text-sm leading-6 text-gray-900", role: "menuitem", tabindex: "-1", id: "options-menu-0-item-0" do %>
          View<span class="sr-only">, Tuple</span>
        <% end %>
        <%= link_to edit_product_path(product), data: { "product-card-target": "menuItem" }, class: "block px-3 py-1 text-sm leading-6 text-gray-900", role: "menuitem", tabindex: "-1", id: "options-menu-0-item-1" do %>
          Edit<span class="sr-only">, Tuple</span>
        <% end %>
        <%= button_to product_path(product),
                      method: :delete,
                      data: { confirm: 'Are you sure you want to delete this product?' },
                      class: "block px-3 py-1 text-sm leading-6 text-gray-900",
                      role: "menuitem",
                      tabindex: "-1",
                      id: "options-menu-0-item-2",
                      "data-turbo": "false" do %>
          Delete<span class="sr-only">, Tuple</span>
        <% end %>
      </div>
    </div>
    <div class="aspect-h-1 aspect-w-1 overflow-hidden rounded-lg bg-gray-200">
      <% if product.covers.first.present? %>
        <img src="<%= product.covers.first.url %>" alt="TODO" class="h-full w-full object-cover object-center">
      <% else %>
        <img src="/assets/no_cover.jpg" alt="No Image Available" class="h-full w-full object-cover object-center">
      <% end %>
    </div>
    <div class="pt-4 text-center">
      <h3 class="text-base font-medium text-gray-900 max-w-xs overflow-hidden">
        <a href="<%= product_path(product) %>" class="hover:text-gray-700 block truncate"><%= product.name %></a>
      </h3>
      <div class="mt-2 flex items-center justify-center">
        <div>
          <h3 class="sr-only">Reviews</h3>
          <div class="flex items-center">
              <% product.average_rating.to_i.times do |review| %>
                <svg class="text-yellow-400 h-5 w-5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
                </svg>
              <% end %>
              <% (5 - product.average_rating.to_i).to_i.times do |review| %>
                <svg class="text-gray-300 h-5 w-5 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z" clip-rule="evenodd" />
                </svg>
              <% end %>
          </div>
          <p class="sr-only"><%= product.average_rating.to_i %> out of 5 stars</p>
        </div>
      </div>
      <p class="mt-1 text-sm text-gray-500"><%= product.reviews.count %> reviews</p>
      <p class="mt-2 text-base font-medium text-gray-900"><%= product.price.currency.symbol %><%= product.price %></p>
    </div>
  </div>
</li>
<script type="text/javascript">
  $(document).ready(function() {
    const menu = $('[data-product-card-target="menu"]');
    
    function closeMenu() {
      menu.addClass('hidden');
      $(document).off('click', closeMenu); 
    }
    
    $('[data-action="product-card#open"]').click(function(event) {
      event.stopPropagation(); 
      menu.toggleClass('hidden');
      
      $(document).on('click', closeMenu);
    });
    
    menu.click(function(event) {
      event.stopPropagation();
    });
  });
</script>