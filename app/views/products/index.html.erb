<%=
  render BreadcrumbComponent.new([
    { text: "Products", url: products_path }
  ])
%>
<main class="pb-4 pt-6 sm:pb-6">
  <div class="space-y-16 py-16 xl:space-y-20">
    <!-- Products list-->
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-none">
        <div class="flex items-center justify-between">
          <h2 class="text-base font-semibold leading-7 text-gray-900">Your Products</h2>
        </div>
        <ul role="list" class="mt-6 grid grid-cols-1 gap-x-6 gap-y-8 lg:grid-cols-3 xl:gap-x-8">
          <%= render @products %>
        </ul>
      </div>
    </div>
  </div>
</main>
