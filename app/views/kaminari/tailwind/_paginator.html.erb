<% if paginator.total_pages > 1 %>
  <nav class="flex items-center justify-center mt-4">
    <ul class="pagination flex space-x-2">
      <% if paginator.current_page > 1 %>
        <li>
          <%= link_to raw('&lsaquo; Prev'), url_for(page: paginator.current_page - 1), class: "text-gray-600 hover:text-gray-800 font-semibold px-2 py-1 rounded border border-gray-300" %>
        </li>
      <% else %>
        <li class="disabled">
          <span class="text-gray-400 font-semibold px-2 py-1 rounded border border-gray-300 cursor-not-allowed"> &lsaquo; Prev </span>
        </li>
      <% end %>

      <% (1..paginator.total_pages).each do |page| %>
        <li>
          <%= link_to page, url_for(page: page), class: "px-2 py-1 rounded-full border border-gray-300 hover:bg-gray-100 #{'font-semibold text-gray-800' if paginator.current_page == page}" %>
        </li>
      <% end %>

      <% if paginator.current_page < paginator.total_pages %>
        <li>
          <%= link_to raw('Next &rsaquo;'), url_for(page: paginator.current_page + 1), class: "text-gray-600 hover:text-gray-800 font-semibold px-2 py-1 rounded border border-gray-300" %>
        </li>
      <% else %>
        <li class="disabled">
          <span class="text-gray-400 font-semibold px-2 py-1 rounded border border-gray-300 cursor-not-allowed"> Next &rsaquo; </span>
        </li>
      <% end %>
    </ul>
  </nav>
<% end %>
