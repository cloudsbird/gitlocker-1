<div class="max-w-md mx-auto bg-white rounded-md shadow-md p-6">
  <h2 class="text-2xl font-semibold mb-4">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border rounded-md focus:outline-none focus:border-blue-500" %>
    </div>

    <div class="text-center">
      <%= f.submit "Send me reset password instructions", class: "bg-gray-800 hover:bg-gray-900 font-bold py-2 px-4 rounded mb-2 text-white" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
