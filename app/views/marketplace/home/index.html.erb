<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="styles.css">
  <title>Home Page</title>
</head>
<body>
  <%= render 'header' %>

  <!-- Home Content -->
  <div class="bg-white">
    <main>
      <!-- Recent Section -->
      <section aria-labelledby="recent-heading" class="pt-16 sm:pt-16 xl:mx-auto xl:max-w-7xl xl:px-8 mb-16">
        <div class="px-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8 xl:px-0">
          <h2 id="recent-heading" class="text-2xl font-bold tracking-tight text-gray-900">Recent</h2>
          <%= link_to marketplace_browse_recent_path, class: "link" do %>
            Browse All Recent Repositories
            <span aria-hidden="true">&rarr;</span>
          <% end %>
        </div>

        <div class="mt-4 flow-root">
          <div class="-my-2">
            <div class="relative box-content h-80 overflow-x-auto py-2 xl:overflow-visible">
              <div class="absolute flex space-x-4 px-4 sm:px-6 lg:px-8 xl:relative xl:grid xl:grid-cols-5 xl:gap-x-8 xl:space-x-0 xl:px-0">
                <%= render partial: "home/product", collection: @recent_products, as: :product %>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Popular Section -->
      <section aria-labelledby="popular-heading" class="pt-16 sm:pt-16 xl:mx-auto xl:max-w-7xl xl:px-8 mb-16">
        <div class="px-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8 xl:px-0">
          <h2 id="popular-heading" class="text-2xl font-bold tracking-tight text-gray-900">Popular</h2>
          <%= link_to marketplace_browse_popular_path, class: "link" do %>
            Browse All Popular Repositories
            <span aria-hidden="true">&rarr;</span>
          <% end %>
        </div>

        <div class="mt-4 flow-root">
          <div class="-my-2">
            <div class="relative box-content h-80 overflow-x-auto py-2 xl:overflow-visible">
              <div class="absolute flex space-x-4 px-4 sm:px-6 lg:px-8 xl:relative xl:grid xl:grid-cols-5 xl:gap-x-8 xl:space-x-0 xl:px-0">
                <%= render partial: "home/product", collection: @popular_products, as: :product %>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Languages Section -->
      <section aria-labelledby="languages-heading" class="pt-16 pb-24 sm:pt-16 xl:mx-auto xl:max-w-7xl xl:px-8">
        <div class="px-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8 xl:px-0">
          <h2 id="languages-heading" class="text-2xl font-bold tracking-tight text-gray-900">Languages</h2>
          <%= link_to marketplace_browse_languages_path, class: "link" do %>
            Browse All Languages
            <span aria-hidden="true">&rarr;</span>
          <% end %>
        </div>

        <div class="mt-4 flow-root">
          <div class="-my-2">
            <div class="relative py-2">
              <div class="px-4 sm:px-6 lg:px-8">
                <div class="mx-auto max-w-7xl">
                  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
                    <%= render partial: "home/language", collection: @languages %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Categories Section -->
      <section aria-labelledby="categories-heading" class="pt-16 pb-24 sm:pt-16 xl:mx-auto xl:max-w-7xl xl:px-8">
        <div class="px-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8 xl:px-0">
          <h2 id="categories-heading" class="text-2xl font-bold tracking-tight text-gray-900">Categories</h2>
          <%= link_to marketplace_browse_categories_path, class: "link" do %>
            Browse All Categories
            <span aria-hidden="true">&rarr;</span>
          <% end %>
        </div>

        <div class="mt-4 flow-root">
          <div class="-my-2">
            <div class="relative py-2">
              <div class="px-4 sm:px-6 lg:px-8">
                <div class="mx-auto max-w-7xl">
                  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
                    <%= render partial: "home/category", collection: @categories %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Users Section -->
      <section aria-labelledby="users-heading" class="pt-16 pb-24 sm:pt-16 xl:mx-auto xl:max-w-7xl xl:px-8">
        <div class="px-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8 xl:px-0">
          <h2 id="users-heading" class="text-2xl font-bold tracking-tight text-gray-900">Users</h2>
          <%= link_to marketplace_creators_path, class: "link" do %>
            Browse All Users
            <span aria-hidden="true">&rarr;</span>
          <% end %>
        </div>

        <div class="mt-4 flow-root">
          <div class="-my-2">
            <div class="relative py-2">
              <div class="px-4 sm:px-6 lg:px-8">
                <div class="mx-auto max-w-7xl">
                  <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
                    <%= render partial: "home/creator", collection: @creators %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>
  </div>
</body>
</html>
