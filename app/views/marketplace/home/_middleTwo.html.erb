<section class="relative block">
  <!-- Carousel Background -->
 <div class="absolute inset-0 z-0 h-full w-full bg-black">
    <%= image_tag "header/banner-01.jpg", class: "h-full w-full object-cover object-center" %>
  </div>

  <!-- Section Content -->
  <div class="relative container mx-auto px-4 text-center text-white py-16 rounded-3xl">
      <%= link_to creators_path do %>
        <h2 class="text-white text-5xl font-mono text-balance max-w-4xl mx-auto">
          <span class="font-bold text-orange-500 italic"><%= User.count %></span> creators on our marketplace! 
        </h2>
      <% end %>
  </div>
</section>
