<section class="relative block">
  <!-- Carousel Background -->
 <div class="absolute inset-0 z-0 h-full w-full bg-black">
    <%= image_tag "header/image1.png", class: "h-full w-full object-cover object-center" %>
  </div>

  <!-- Section Content -->
  <div class="relative container mx-auto px-4 text-center text-white py-16 rounded-3xl">
        <h1 class="text-white text-5xl font-light max-w-4xl mx-auto">
