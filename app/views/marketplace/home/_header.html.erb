      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
        <%= link_to "Create an account", new_user_registration_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full" %>
