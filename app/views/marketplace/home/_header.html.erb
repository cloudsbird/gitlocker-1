        <%= link_to "Sell your code", new_product_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full font-mono" %>
        <%= link_to "Get paid", funds_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full font-mono" %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full font-mono" %>
