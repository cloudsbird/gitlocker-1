<div class="bg-white">
  <%= render BreadcrumbComponent.new(current_user, [{ text: "Recent", url: marketplace_browse_recent_path }]) %>
  <main>
    <section aria-labelledby="category-heading" class="py-6 sm:py-8 xl:py-16 xl:mx-auto xl:max-w-7xl xl:px-8">
      <div class="px-4 sm:flex sm:items-center sm:justify-between sm:px-6 lg:px-8 xl:px-0 mb-4">
        <h2 id="category-heading" class="text-xl sm:text-2xl font-bold tracking-tight text-gray-900">Browse By Recent Repositories</h2>
      </div>
      <div class="px-4 sm:px-6 lg:px-8">
        <p class="text-sm sm:text-base text-gray-700">This is all of our products listed in order of when they have been uploaded to our marketplace. In other words, these are all of our products listed in order from most recent to oldest.</p>
      </div>

      <%= render partial: 'shared/filters' %>

      <div class="mt-8 flow-root">
        <div class="-my-2">
          <div class="px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5">
              <% if @products.any? %>
                <%= render partial: "home/product", collection: @products %>
              <% else %>
                <p class="text-center text-gray-600">No products found.</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-8 px-4 sm:px-6 lg:px-8">
        <%= render 'kaminari/tailwind/paginator', paginator: @products %>
      </div>
    </section>
  </main>
</div>
