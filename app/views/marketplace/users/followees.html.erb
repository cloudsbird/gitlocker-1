<section class="relative py-16 bg-blueGray-200 " style="min-height: 30.46rem;">
	<div class="container mx-auto px-4">
		<div class="max-w-3xl mx-auto mt-8">
			<h1 class="text-2xl font-bold mb-4">Users followed by <%= @user.username %></h1>
			<ul class="divide-y divide-gray-200">
				<% @followees.each do |followee| %>
				<li class="py-4 flex items-center justify-between">
					<div class="flex items-center">
						<span class="font-bold text-lg">
		                <%= link_to followee.username, marketplace_creator_path(followee), class: "text-blue-500 hover:underline", target: "_blank" %>
		              </span>
					</div>
					<div>
						<% if followee.id != current_user.id %>
						<% if current_user.followees.include?(followee) %>
						<%= button_to "Unfollow", marketplace_unfollow_user_path(followee), method: :post, class: "bg-pink-500 active:bg-pink-600 uppercase text-white font-bold hover:shadow-md shadow text-xs px-4 py-2 rounded outline-none focus:outline-none sm:mr-2 mb-1 ease-linear transition-all duration-150" %>
						<% else %>
						<%= button_to "Follow", marketplace_follow_user_path(followee), method: :post, class: "bg-pink-500 active:bg-pink-600 uppercase text-white font-bold hover:shadow-md shadow text-xs px-4 py-2 rounded outline-none focus:outline-none sm:mr-2 mb-1 ease-linear transition-all duration-150" %>
						<% end %>
						<% end %>
					</div>
				</li>
				<% end %>
			</ul>
		</div>
	</div>
</section>
