<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-16 bg-slate-400 min-h-screen min-w-full">
  <%= form_with model: @user, url: marketplace_user_path(@user), method: :put, data: { turbo: false } do |f| %>
    <div class="space-y-12">
      <div class="flex justify-start mb-4">
        <%= button_to marketplace_user_path(@user), method: :delete, data: { turbo_confirm: "Are you sure you want to delete your account? This action cannot be undone." }, class: " cursor-pointer bg-red-600 text-white rounded-md px-3 py-2 text-sm font-semibold shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600" do %>
          Delete Account
        <% end %>
      </div>

      <div class="border-b border-gray-900/10 pb-12">
        <h1 class="text-base font-semibold leading-7 text-gray-900 underline">Profile</h1>
        <p class="mt-1 text-sm leading-6 text-gray-600">This information will be displayed publicly so be careful what you share.</p>

        <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
          <!-- Profile fields -->
          <div class="sm:col-span-4">
            <%= f.label :username, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
                <span class="flex select-none items-center pl-3 text-gray-500 sm:text-sm">gitlocker.com/</span>
                <%= f.text_field :username, class: "block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" %>
              </div>
            </div>
          </div>

          <div class="col-span-full">
            <%= f.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= f.email_field :email, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="col-span-full">
            <%= f.label :name, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= f.text_field :name, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="col-span-full">
            <%= f.label :bio, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= f.text_area :bio, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="col-span-full">
            <%= f.label :company, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= f.text_field :company, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="col-span-full">
            <%= f.label :location, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= f.text_field :location, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="col-span-full">
            <%= f.label :profile_picture, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= f.file_field :profile_picture %>
            </div>
          </div>

          <div class="col-span-full">
            <%= f.label :facebook_url, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2 flex items-center gap-x-3">
              <%= f.text_field :facebook_url, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="col-span-full">
            <%= f.label :instagram_url, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= f.text_field :instagram_url, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="col-span-full">
            <%= f.label :linkedin_url, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= f.text_field :linkedin_url, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="col-span-full">
            <%= f.label :youtube_url, class: "block text-sm font-medium leading-6 text-gray-900" %>
            <div class="mt-2">
              <%= f.text_field :youtube_url, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
            </div>
          </div>

          <div class="col-span-full">
            <div class="sm:col-span-4">
              <%= f.label :categories, class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= f.select :category_ids, Category.all.map { |c| [c.name, c.id] }, {}, { class: "js-example-basic-multiple w-40 sm:w-50 mt-1 block rounded-md shadow-sm border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", multiple: true } %>
              </div>
            </div>
          </div>

          <div class="col-span-full">
            <div class="sm:col-span-4">
              <%= f.label :languages, class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= f.select :language_ids, Language.all.map { |c| [c.name, c.id] }, {}, { class: "js-example-basic-multiple w-40 sm:w-50 mt-1 block rounded-md shadow-sm border-gray-300 focus:border-indigo-500 focus:ring focus:ring-indigo-200 focus:ring-opacity-50", multiple: true } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Cancel and Update buttons aligned on the right side -->
    <div class="mt-6 flex justify-end items-center gap-x-4">
      <%= link_to "Cancel", marketplace_user_path(@user), class: "text-sm font-semibold leading-6 text-gray-900" %>
      <%= f.submit "Update", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
    </div>
  <% end %>
</div>
