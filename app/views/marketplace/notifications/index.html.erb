<div class="bg-gradient-to-r from-blue-700 to-orange-500 p-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-semibold">Notifications</h1>
    <div class="relative">
      <% if current_user.notifications.unread.present? %>
        <%= link_to "Mark All as Read", mark_all_as_read_marketplace_notifications_path, method: :get, class: "inline-block px-4 py-2 text-sm font-bold text-blue-900 bg-blue-300 hover:bg-blue-500 rounded-lg shadow-md" %>
      <% end %>
    </div>
  </div>

  <div class="w-full">
    <% @notifications.each do |notification| %>
      <%= render partial: 'notification', locals: { notification: notification } %>
    <% end %>
    <div class="mt-12">
      <!-- Pagination with sort_by parameter -->
      <%= render 'kaminari/tailwind/paginator', paginator: @notifications, params: { sort_by: params[:sort_by] } %>
    </div>
  </div>
</div>
