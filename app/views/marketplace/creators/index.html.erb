<%=
  render BreadcrumbComponent.new(current_user,[
    { text: "Creators", url: marketplace_creators_path }
  ])
%>
<main class="pb-4 pt-6 sm:pb-6">
  <div class="space-y-16 py-16 xl:space-y-20">
    <!-- Creators list-->
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-none">
        <div class="flex items-center justify-between mb-12">
          <h2 class="text-base font-semibold leading-7 text-gray-900">List of Creators</h2>
        </div>
        <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
          <%= render partial: "marketplace/creators/creator", collection: @users, as: :user %>
        </ul>
      </div>
    </div>
  </div>
</main>
