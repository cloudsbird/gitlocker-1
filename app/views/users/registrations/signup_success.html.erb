<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<section class="signup-success section mt-10 px-4">
    <div class="container mx-auto">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 col-12">
                <!-- Success Inner -->
                <div class="success-inner text-center bg-white border-t border-gray-300 rounded-lg p-8 shadow-lg">
                    <h1 class="text-5xl font-bold text-blue-600">
                        <i class="fa fa-check-circle fa-5x"></i> 
                        <span class="block text-3xl font-semibold text-gray-700 mt-4">Account Created Successfully!</span>
                    </h1>
                    <p class="py-4 px-3 text-lg text-gray-600">Thank you for signing up with us. An email confirmation has been sent to <b><%= params[:email] %></b></p>
                    <p class="py-4 px-3 text-lg text-gray-600">Please click on the confirmation link in the email to activate your account.</p>
                    <a href="<%= new_session_path(resource_name) %>" class="btn btn-primary btn-lg bg-blue-500 hover:bg-blue-700 text-black font-bold py-2 px-4 rounded">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</section>
