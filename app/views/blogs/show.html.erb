<%= content_for :title, @blog.title %>
<div class="bg-gradient-to-r from-blue-700 to-orange-500">
<div class="container mx-auto px-4 py-6">
  <h1 class="text-3xl text-black font-bold mb-4"><%= @blog.title %></h1>
  
  <div class="text-black mb-6">
    <% 
      linked_content = @blog.content.gsub(%r{(https?://[^\s<]+)}) do |url|
        "<a href='#{url}' class='text-black underline' target='_blank'>#{url}</a>"
      end
    %>
    <%= raw(linked_content) %>
  </div>

  <% if @blog.image.attached? %>
    <div class="mb-6">
      <%= image_tag url_for(@blog.image), class: "w-full h-auto rounded-lg shadow-md" %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to 'Back to Blogs', blogs_path, class: "text-black hover:text-white" %>
  </div>
</div>
</div>
