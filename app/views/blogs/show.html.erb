<%= content_for :title, @blog.title %>

<div class="container mx-auto px-4 py-6">
  <h1 class="text-3xl font-bold mb-4"><%= @blog.title %></h1>
  <p class="text-gray-700 mb-6"><%= @blog.content %></p>

  <% if @blog.image.attached? %>
    <div class="mb-6">
      <%= image_tag url_for(@blog.image), class: "w-full h-auto rounded-lg shadow-md" %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to 'Back to Blogs', blogs_path, class: "text-indigo-600 hover:text-indigo-500" %>
  </div>
</div>
